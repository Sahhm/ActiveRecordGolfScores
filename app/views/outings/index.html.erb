<p id="notice"><%= notice %></p>

<h1>Listing Outings</h1>
<%= link_to 'New Outing', new_outing_path %>
<div class="columhead">
  <table>
    <thead>
      <tr>
        <td><p>Course</p></td>
        <td></td>
        <td><p>Golfer</p></td>
        <td></td>
        <td><p>18 Hole Score</p></td>
        <td></td>
        <td><p>Outing Handicap</p></td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @outings.each do |outing| %>
        <tr>        
          <td><%= outing.golfer.name  %></td>
          <td></td>
          <td><%= outing.course.name %></td>
          <% score = outing.front_9_score + outing.back_9_score%>
          <td></td>
          <td><%= score %></td>
          <td></td>
          
          <% par = outing.course.front_9_par + outing.course.back_9_par %>
          <% handicap = score - par%>
          <%if handicap >= 0%>
            <td>+<%= handicap %></td> 
          <%else%>
            <td><%= handicap %></td>
          <%end%>
          <td><%= link_to 'Show', outing %></td>
          <td><%= link_to 'Edit', edit_outing_path(outing) %></td>
          <td><%= link_to 'Destroy', outing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %> 
    </tbody>
  </table>

</div>
<hr>
<br>
